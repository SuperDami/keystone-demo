doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    link(href="/styles/post.css", rel="stylesheet")
  if data.blankHeight > 0
    .blank(style = "height : #{data.blankHeight}px")
  body
    .container: .row: .col-sm-10.col-sm-offset-1.col-md-8.col-md-offset-2
      article
        if !data.post
          h2 Invalid Post.
        else
          if data.post.videoURL.length
            .goldLine
            .post
              != data.post.content.full
          else
            header(style="background: #000 url(" + data.post.image.url + ") center center no-repeat;background-size:cover;") 
              .grayCover
                  h1= data.post.title
            .post
              != data.post.content.full